{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",

        "moduleResolution": "node",
        "lib": ["esnext", "dom"],

        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "declaration": true,
        "declarationDir": "./temp/types",
        "emitDeclarationOnly": true,

        "strict": true,
        "noImplicitAny": true
    }
}
